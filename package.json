{
  "name": "redux-resource-project",
  "private": true,
  "scripts": {
    "test": "npm run lint && npm run test:unit",
    "test:unit": "cross-env BABEL_ENV=test nyc --reporter=lcov --reporter=text mocha --compilers js:babel-register --colors test/setup/node.js packages/*/test/unit/**",
    "lint": "eslint \"packages/*/{src,test}/**/*.js\" \"./packages/*/rollup.config.js\"",
    "build": "lerna run build",
    "clean": "lerna clean",
    "prettier": "prettier **/*.js --write",
    "publish": "npm run build && lerna publish",
    "bootstrap": "lerna bootstrap",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "license": "MIT",
  "devDependencies": {
    "all-contributors-cli": "^4.4.0",
    "babel-core": "^6.25.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-rewire": "^1.1.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "coveralls": "^3.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "gitbook-cli": "^2.3.0",
    "lerna": "^2.0.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "pleaserc": "^2.4.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.6",
    "sinon-chai": "^2.11.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "packages/*/{dist,test,lib}/**/*.js",
      "packages/node_modules/**/*"
    ]
  },
  "dependencies": {
    "gitbook-plugin-anchorjs": "^2.0.0",
    "gitbook-plugin-edit-link": "2.0.2",
    "gitbook-plugin-ga": "1.0.1",
    "gitbook-plugin-github": "2.0.0",
    "gitbook-plugin-prism": "2.3.0"
  }
}
